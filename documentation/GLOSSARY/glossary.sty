% This file contains the glossary entries for the
% Requirements documentation

\newglossaryentry{must_have_req}
{
    name={Must Have Requirement},
    description={Thees requirements are part of the minimum usable subset of requirements to deliver a final application.}
}

\newglossaryentry{should_have_req}
{
    name={Should Have Requirement},
    description={Thees requirements are important, but not vital. If they are not fullfilled for a specific version, it is not vital, but needs to be patched.}
}

\newglossaryentry{nice_to_have_req}
{
    name={Nice to Have Requirement},
    description={These requirements are desirable, but not important. If they are not present in the current version, the goal should be to implement them in the next. No patching needed.}
}

\newglossaryentry{tex_engine}
{
    name={{\LaTeX}-engine},
    description={The programm / script used to compile {\LaTeX} documents to create a PDF document.}
}

\newglossaryentry{bib_engine}
{
    name={bibliography-engine},
    description={The programm / script used to compile {\LaTeX} documents to create a bibliography.}
}

\newglossaryentry{glo_engine}
{
    name={glossary-engine},
    description={The programm / script used to compile {\LaTeX} documents to create a glossary.}
}
